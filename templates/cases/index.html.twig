{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cases</h1>
    {% if message is defined %}
        <p>{{ message }}</p>
    {% endif %}
    {% if cases %}
        <ul>
            {% for case in cases %}
                <li>
                    <a href="{{ path('viewcase', {id: case.id}) }}">{{ case.description }}</a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock body %}
